{
  "name": "@goodleby/lib",
  "version": "4.0.1",
  "description": "Library of typed and tested javascript functions",
  "main": "build/goodlebyLib.js",
  "types": "types/",
  "scripts": {
    "lint": "eslint . && eslint . --fix",
    "format": "prettier --write .",
    "jest": "jest --passWithNoTests",
    "test": "npm run format && npm run lint && npm run jest",
    "tsc": "rm -r types/; tsc",
    "build": "npm run tsc && webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "prepare": "npm run build && husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goodleby/lib.git"
  },
  "keywords": [
    "library",
    "functions",
    "math",
    "matrices",
    "primes",
    "tested",
    "typed"
  ],
  "author": "Alex Chebotarsky",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/goodleby/lib/issues"
  },
  "homepage": "https://github.com/goodleby/lib#readme",
  "browserslist": "defaults",
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "errorOnDeprecated": true,
    "testEnvironment": "jsdom"
  },
  "prettier": {
    "singleQuote": true
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.5.1",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.2",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "mini-css-extract-plugin": "^2.4.5",
    "prettier": "^2.5.1",
    "sass": "^1.45.1",
    "sass-loader": "^12.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  }
}
